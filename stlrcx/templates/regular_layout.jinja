{% extends "base_layout.jinja" %} {% block sublayout %}

{# include 'header.jinja' #} 
<header class="site-header">
    <nav class="navbar navbar-expand-md navbar-dark bg-steel fixed-top">
        <div class="container">
            <a class="navbar-brand mr-4" href="/">STLRCX</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarToggle">
                <div class="navbar-nav mr-auto"></div>
                <!-- Navbar Right Side -->
                <div class="navbar-nav">
                    <a class="navbar-brand mr-4" href="{{ url_for('library') }} ">Library</a>
                    <a class="navbar-brand mr-4" href="{{ url_for('tags') }} ">Tags</a>
                    <a class="navbar-brand mr-4" href="{{ url_for('sorter') }}">Sorter</a>
                </div>
            </div>
        </div>
    </nav>
</header>
<main role="main" class="container">
    <div class="row">
        <div class="col-md">
            {% with messages = get_flashed_messages(with_categories=true) %} {% if messages %} {% for category, message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
            {% endfor %} {% endif %} {% endwith %} {% block content %}{% endblock %}
        </div>

        {% if show_taglist %}
        <div class="col-md-3">
            <div class="content-section">
                <h3><a href="{{ url_for('tags') }}">Tags</a></h3>
                <ul style="padding-left: 0px;">
                    {% for tag in tags %}
                        <li class="list-group-item" >
                            <a href="{{ url_for('view_tag', tag_name=tag.tag_name) }}">{{tag.tag_name}}</a> <!--  -->
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}

    </div>
</main>

{# include 'footer.jinja' #} 

{% endblock sublayout %}

