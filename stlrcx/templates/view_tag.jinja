{% extends "layout.jinja" %} {% block content %} 

<ul>
    {% for file in files %}
        <a href="{{ url_for('view_image', id=file.id)}}">
            <li class="list-group-item"><strong>{{file.file_path}} {{file.id}}</strong>  {{file}}
                <img src="{{ url_for('download_file', filename=file.file_path) }}" width="300px">
            </li>
        </a>
        

    {% endfor %}
</ul>

{% endblock content %}