{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "lib": ["ES2020"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "outDir": "./build",
        "rootDirs": ["src/"],
        "declarationMap": true,
        "declaration": true,
        "experimentalDecorators": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}